{% extends 'admin.html.twig' %}

{% trans_default_domain 'mozaic' %}

{% block page_title %}
    {{ 'admin.title.season_create' | trans | desc('Seasons form') }} - {{ parent() }}
{% endblock %}

{% block content_title %}
    {{ 'admin.page_title.season_create' | trans | desc('Seasons form') }}
{% endblock %}

{% block main %}
    <div class="container py-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{ path('disjfa_mozaic_admin_season_index') }}">
                        {{ 'admin.breadcrumb.season_index' | trans | desc('Seasons') }}
                    </a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                    {{ 'admin.breadcrumb.season_form' | trans | desc('Edit') }}
                </li>
            </ol>
        </nav>

        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        {{ form_rest(form) }}
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save"></i>
            {{ 'admin.season.button.save_item' | trans | desc('Save item') }}
        </button>

        {{ form_end(form) }}
    </div>
{% endblock %}
